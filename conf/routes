# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.WelcomeController.welcome
# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

#Route to WelcomeController showing welcome page
GET     /welcome                    controllers.WelcomeController.welcome

GET     /profile                    controllers.ProfileController.profile

GET     /javascriptRoutes           controllers.JavascriptRoutesController.javascriptRoutes


GET    /signup                      controllers.WelcomeController.signUp

GET    /login                       controllers.WelcomeController.logIn

POST   /addPerson/*lname            controllers.SignUpController.addPerson(lname,uname,password,mbNumber)

GET    /login/*uname                controllers.LogInController.logIn(uname, password)
